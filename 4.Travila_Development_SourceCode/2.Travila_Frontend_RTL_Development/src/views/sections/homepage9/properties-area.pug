                        svg(xmlns='http://www.w3.org/2000/svg', width='16', height='16', viewbox='0 0 16 16', fill='none')
                            path(d='M7.99992 12.6666L12.6666 7.99992L7.99992 3.33325M12.6666 7.99992L3.33325 7.99992', stroke='', stroke-linecap='round', stroke-linejoin='round')

        .box-list-featured 
            .box-swiper.mt-0
                .swiper-container.swiper-group-4.swiper-group-journey
                    .swiper-wrapper
                        -
                            const spotsLists = [
                                {
                                    index: "1",
                                    image: "assets/imgs/page/homepage9/area.png",
                                    title: 'Venice',
                                    link: 'rental-property-2.html'
                                },
                                {
                                    index: "2",
                                    image: "assets/imgs/page/homepage9/area2.png",
                                    title: 'New York',
                                    link: 'rental-property-2.html'
                                },
                                {
                                    index: "3",
                                    image: "assets/imgs/page/homepage9/area3.png",
                                    title: 'Amsterdam',
                                    link: 'rental-property-2.html'
                                },
                                {
                                    index: "1",
                                    image: "assets/imgs/page/homepage9/area4.png",
                                    title: 'Budapest',
                                    link: 'rental-property-2.html'
                                }
                            ]
                        each item in spotsLists
                            .swiper-slide 
                                .card-spot.background-card.wow.fadeInDown 
                                    .card-image 
                                        a(href= item.link)
                                            img(src= item.image, alt="Travila")
                                    .card-info.background-card 
                                        .card-left
                                            .card-title 
                                                a.text-lg-bold.neutral-1000(href= item.link)= item.title 
                                            .card-desc 
                                                a.text-sm.neutral-500(href="#") 356 Properties
                                        .card-right 
                                            .card-button 
                                                a(href="rental-property-2.html") 
                                                    svg(width='10', height='10', viewbox='0 0 10 10', fill='none', xmlns='http://www.w3.org/2000/svg')
                                                        path(d='M5.00011 9.08347L9.08347 5.00011L5.00011 0.916748M9.08347 5.00011L0.916748 5.00011', stroke='', stroke-linecap='round', stroke-linejoin='round')