    .box-love-us-inner
        .container 
            .row.align-items-center 
                .col-lg-5.wow.fadeInLeft
                    img(src="assets/imgs/page/homepage3/img-love.png", alt="Travila")
                .col-lg-7.wow.fadeInRight
                    h2.neutral-1000 You will love us
                    p.text-xl-medium.neutral-500 Because more than 268 other customers have loved us too

                    .row.mt-65 
                        -
                            const itemLoveLists = [
                                {
                                    index: "1",
                                    image: "assets/imgs/page/homepage2/security.svg",
                                    title: 'Security Assurance',
                                    desc: 'Demonstrates commitment to user data security through encryption and secure payment practices',
                                    link: '#'

                                },
                                {
                                    index: "2",
                                    image: "assets/imgs/page/homepage2/support.svg",
