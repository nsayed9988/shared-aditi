section.section-box.box-popular-destinations.background-body
    .container 
        .row.align-items-end
            .col-lg-6.mb-30.text-center.text-lg-start.wow.fadeInUp 
                h2.neutral-1000 Popular Destinations
                p.text-xl-medium.neutral-500 Favorite destinations based on customer reviews
            .col-lg-6.mb-30.wow.fadeInUp 
                .d-flex.align-items-center.justify-content-center.justify-content-lg-end.popular-categories
                    .dropdown.dropdown-filter
                        button#dropdownCategory.btn.btn-dropdown.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false') 
                            span Categories
                        ul.dropdown-menu.dropdown-menu-light(aria-labelledby='dropdownCategory', style='margin: 0px;')
                            li
                                a.dropdown-item.active(href='#') Attractives
                            li
                                a.dropdown-item(href='#') Active
                            li
                                a.dropdown-item(href='#') Nature
                        
                    .dropdown.dropdown-filter
                        button#dropdownCategory.btn.btn-dropdown.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false') 
                            span Duration
                        ul.dropdown-menu.dropdown-menu-light(aria-labelledby='dropdownCategory', style='margin: 0px;')
                            li
                                a.dropdown-item.active(href='#') 4 Hours
                            li
                                a.dropdown-item(href='#') 8 Hours
                            li
                                a.dropdown-item(href='#') 2 Days

                    .dropdown.dropdown-filter
                        button#dropdownCategory.btn.btn-dropdown.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false') 
                            span Review / Rating
                        ul.dropdown-menu.dropdown-menu-light(aria-labelledby='dropdownCategory', style='margin: 0px;')
                            li
                                a.dropdown-item.active(href='#') Newest
                            li
                                a.dropdown-item(href='#') Oldest
                    
                    .dropdown.dropdown-filter
                        button#dropdownCategory.btn.btn-dropdown.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false') 
                            span Price range
                        ul.dropdown-menu.dropdown-menu-light(aria-labelledby='dropdownCategory', style='margin: 0px;')
                            li
                                a.dropdown-item.active(href='#') $10 - $100
                            li
                                a.dropdown-item(href='#') $100 - $1.000
                            li
                                a.dropdown-item(href='#') $1.000 - $10.000

