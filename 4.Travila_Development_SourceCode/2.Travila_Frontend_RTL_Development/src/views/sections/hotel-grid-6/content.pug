    .container 
        .box-content-main
            .content-right
                include ../../elements/box-filters.pug
                .box-grid-hotels.wow.fadeIn
                    .row
                        -
                            const itemLists = [
                                {
                                    index: 1,
                                    image: "assets/imgs/page/homepage1/journey2.png",
                                    title: 'Hotel del Coronado, San Diego, USA',
                                    location: 'Suite 756 031 Ines Riverway, Rhiannonchester',
                                    price: '$48.25',
                                    link: '#'
                                },
                                {
                                    index: 2,
                                    image: "assets/imgs/page/homepage1/journey3.png",
                                    title: 'Marina Bay Sands, Singapore',
                                    location: '09 Arnulfo Crossing, Botsfordborough',
                                    price: '$17.32',
                                    link: '#'
                                },
                                {
                                    index: 3,
                                    image: "assets/imgs/page/homepage1/journey4.png",
                                    title: 'The Waldorf Astoria, Shanghai, China',
                                    location: '74C Aaliyah River ,Bayerhaven',
                                    price: '$15.63',
                                    link: '#'
                                },
                                {
                                    index: 2,
                                    image: "assets/imgs/page/homepage1/journey2.png",
                                    title: 'Belmond Hotel Caruso, Ravello, Italy',
                                    location: '3 Bauch Nook, Howefort',
                                    price: '$35.62',
                                    link: '#'
                                },
                                {
                                    index: 1,
                                    image: "assets/imgs/page/homepage1/journey3.png",
                                    title: 'The Venetian, Las Vegas, USA',
                                    location: '0 / 77 Purdy Crescent, West Arthur',
                                    price: '$17.32',
                                    link: '#'
                                }
                            ]
                        each item in itemLists
                            .col-xl-12.col-lg-12
                                .card-flight.card-hotel.background-card 
                                    .card-image 
                                        a.wish(href="#")
                                            svg(width='20', height='18', viewbox='0 0 20 18', fill='none', xmlns='http://www.w3.org/2000/svg')
                                                path(d='M17.071 10.1422L11.4141 15.7991C10.6331 16.5801 9.36672 16.5801 8.58568 15.7991L2.92882 10.1422C0.9762 8.1896 0.9762 5.02378 2.92882 3.07116C4.88144 1.11853 8.04727 1.11853 9.99989 3.07116C11.9525 1.11853 15.1183 1.11853 17.071 3.07116C19.0236 5.02378 19.0236 8.1896 17.071 10.1422Z', stroke='', stroke-width='1.5', stroke-linecap='round', stroke-linejoin='round')
                                        img(src= item.image, alt="Travila")
                                    .card-info 
                                        label.sale-lbl -25%
                                        .tour-rate 
                                            .rate-element
                                                span.rating 4.96 
                                                    span.text-sm-medium.neutral-500 (672 reviews)
                                        .card-title 
                                            a.heading-6.neutral-1000(href="#")= item.title
                                        .card-program 
                                            .card-location.mb-25 
                                                p.text-location.text-md-medium.neutral-500= item.location
                                            .card-tags 
                                                a.btn.btn-tag-border(href="#") City Centre
                                                a.btn.btn-tag-border(href="#") Air conditioning
                                                a.btn.btn-tag-border(href="#") Heater
                                                a.btn.btn-tag-border(href="#") Pool
                                                a.btn.btn-tag-border(href="#") Restaurant
                                            .card-facilities 
                                                ul.list-tick-green 
                                                    li Free Breakfast
                                                    li Airport Transfer
                                                    li Luxury Rooms
                                                    li Free Wifi
                                                    li Free Cancellation
                                                    li Business Rooms
                                            .endtime 
                                                .card-price 
                                                    p.text-md-medium.neutral-500.ml-5 From 
                                                    h6.heading-6.neutral-1000 $148.25
                                                    p.text-md-medium.neutral-500 / night
                                                .card-button 
                                                    a.btn.btn-gray(href="hotel-detail.html") See Availability
                    include ../../elements/pagination.pug
            .content-left
                include ../../elements/sidebar-left-hotel.pug